<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".helpers.TextHelperActivity">

    <EditText
        android:id="@+id/etInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your text here ... "
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCommentTets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:onClick="postComment"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:hint="Comment"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/etInputText" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvOpTextlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:hint="Please enter your label here ... "
        app:layout_constraintTop_toBottomOf="@id/btnCommentTets" />
</androidx.constraintlayout.widget.ConstraintLayout>